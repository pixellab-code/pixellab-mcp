{
  "name": "pixellab-mcp",
  "version": "0.0.0",
  "type": "module",
  "description": "MCP server for PixelLab pixel art generation and manipulation. Usage: pixellab-mcp --secret=your-key",
  "main": "dist/index.js",
  "bin": {
    "pixellab-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src --ext .ts",
    "test": "jest --no-cache --passWithNoTests --maxWorkers=1",
    "test:ci": "jest --ci --maxWorkers=1",
    "prepublishOnly": "npm run build",
    "example": "npm start -- --secret=your-pixellab-secret-here",
    "example:dev": "npm start -- --secret=your-key --base-url=http://localhost:8000"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "pixellab",
    "pixel-art",
    "image-generation",
    "ai",
    "cursor"
  ],
  "author": "PixelLab",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@pixellab-code/pixellab": "^1.0.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^16.18.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "sharp": "^0.34.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
